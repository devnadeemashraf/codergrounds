{
  "name": "@codergrounds/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && tsc-alias",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "pnpm tsx scripts/db/seed.ts --run",
    "migrate:create": "node-pg-migrate create --migrations-dir src/infrastructure/database/migrations",
    "migrate:up": "pnpm tsx scripts/db/migrate.ts --up",
    "migrate:down": "pnpm tsx scripts/db/migrate.ts --down"
  },
  "packageManager": "pnpm@10.23.0",
  "dependencies": {
    "@codergrounds/shared": "workspace:*",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "http-status-codes": "^2.3.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.3",
    "ms": "^2.1.3",
    "node-pg-migrate": "^8.0.3",
    "pg": "^8.16.3",
    "pino": "^10.1.0",
    "reflect-metadata": "^0.2.2",
    "tsyringe": "^4.10.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/ms": "^2.1.0",
    "@types/pg": "^8.15.6",
    "pino-pretty": "^13.1.3"
  }
}
